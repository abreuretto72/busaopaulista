<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    
    
<com.loopj.android.image.SmartImageView
    android:id="@+id/appIconfs" 
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"  
        android:textSize="12dp"   
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp" />
    
    
    
    
    
    
    <TextView
        android:id="@+id/titleTxtfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/appIconfs"
        android:layout_toRightOf="@id/appIconfs"
        android:layout_marginLeft="3dp"
        android:text="Application Title"
        android:textColor="@color/texto"
        android:textSize="16dp"/>
    
    <TextView
        android:id="@+id/endeTxtfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:layout_toRightOf="@id/appIconfs"
         android:layout_below="@id/titleTxtfs"
        android:layout_marginLeft="3dp"
        android:text="Application Title"
         android:textColor="@color/textoende"
        android:textSize="12dp"/>
    
    
    
    
    <LinearLayout
        android:id="@+id/ratingCntrfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/appIconfs"
        android:layout_below="@id/endeTxtfs"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp" >
    </LinearLayout>
 
    <TextView
        android:id="@+id/dlTxtfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endeTxtfs"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:textColor="@color/textoende"
        android:textSize="12dp"
        android:text="0 dl" />  
        
    <TextView
        android:id="@+id/tipTxtfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlTxtfs"
        android:layout_toRightOf="@id/appIconfs"
       
        android:textColor="@color/textotip"
        android:textSize="12dp"
        android:text="0 dl" />  
    
    <com.loopj.android.image.SmartImageView
    android:id="@+id/appfotofs" 
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"  
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp" />
    
 
</RelativeLayout>
 
